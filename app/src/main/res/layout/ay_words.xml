<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activ.AyWords"
    >

    <TextView
        android:text="@string/word_mix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"

        android:layout_marginEnd="9dp"
        android:onClick="aw_menuClick"
        android:textSize="28sp"
        app:drawableEndCompat="@drawable/baseline_more_vert_36" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_marginBottom="32dp"
    android:layout_marginTop="50dp"
    android:layout_height="match_parent">

    <org.apmem.tools.layouts.FlowLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/flowLayout"
        android:orientation="horizontal"> <!-- Vertical Orientation set -->

    </org.apmem.tools.layouts.FlowLayout>

</ScrollView>

        <com.e.versmix.utils.HsTextView
            android:text="@string/s"
            android:id="@+id/wtvSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:onClick="tvSpeackClick"
            />

    <TextView
        android:text=" ? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="txtClick"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/wtvSpeak"
        />

        <TextView
            android:text=""
            android:id="@+id/ayheaderTextView"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:drawableStartCompat="@drawable/ic_refresh_white_24dp"
            app:drawableEndCompat="@drawable/ic_refresh_white_24dp"
        android:layout_centerInParent="true"
        android:textSize="18sp"
            />


</RelativeLayout>